<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<!-- viewmodel parameter -->

    <android.support.v7.widget.CardView
        android:id="@+id/feedCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/titleRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bookTitle_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Harry Potter"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:gravity="bottom|start|center_horizontal|center_vertical"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp" />

                    <ImageButton
                        android:id="@+id/disLikeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:visibility="visible"
                        android:contentDescription="@string/click_here_to_set_as_your_favourites"
                        app:srcCompat="@android:drawable/btn_star_big_off" />

                    <ImageButton
                        android:id="@+id/likeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:contentDescription="@string/click_to_dislike_it"
                        android:visibility="gone"
                        app:srcCompat="@android:drawable/btn_star_big_on" />
                </LinearLayout>

                <TextView
                    android:id="@+id/datePostedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp" />

                <TextView
                    android:id="@+id/contentspaceText"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_margin="1dp" />

                <Button
                    android:id="@+id/commentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:backgroundTintMode="screen"
                    android:gravity="start"
                    android:text="@string/comment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="12sp" />

            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>